<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/backGround"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="390dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imageView_single_movie"
        android:layout_width="match_parent"
        android:src="@drawable/poster"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
         />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/title_single_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/aldrich"
            android:maxLines="1"
            android:text="Haarry Potter"
            android:textColor="@color/mainText"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/date_single_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/aldrich"
                android:maxLines="2"
                android:text="21/08/2022"
                android:textColor="@color/textAd"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="28dp"
                android:layout_height="18dp"
                android:background="@drawable/hd_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/aldrich"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="HD"
                    android:textColor="@color/mainText"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/genre1_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/aldrich"
                android:maxLines="2"
                android:text="Action"
                android:textColor="@color/textAd"
                android:textSize="12sp" />

            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/genre2Layout_movie"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/circle_bg"
                    />
                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/genre2_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:maxLines="2"
                    android:text="Family"
                    android:textColor="@color/textAd"
                    android:textSize="12sp" />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>